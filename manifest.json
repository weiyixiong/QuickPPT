{
  "manifest_version": 2,

  "name": "PPT2HTML",
  "description": "The extension let you open ppt with you browser.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}